# MQTT Configuration (mock for tests)
MQTT_BROKER_URL=mqtt://localhost:1884
MQTT_USERNAME=
MQTT_PASSWORD=

# Application Configuration
PORT=3000
LOG_LEVEL=error

# Admin Configuration
ADMIN_EMAIL=admin@test.com
ADMIN_PHONE=+5511999999999

# Security Configuration
SECURITY_AUDIT_LEVEL=LOW
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_HOURS=24
INACTIVITY_TIMEOUT_HOURS=2
ADMIN_WHITELIST_IPS=127.0.0.1,::1

# Rate Limiting Configuration (higher limits for tests)
