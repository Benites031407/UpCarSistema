# WhatsApp Business API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Admin Configuration
ADMIN_EMAIL=admin@machinerental.com
ADMIN_PHONE=+5511999999999

# Security Configuration
SECURITY_AUDIT_LEVEL=MEDIUM
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_HOURS=24
INACTIVITY_TIMEOUT_HOURS=2
ADMIN_WHITELIST_IPS=127.0.0.1,::1

# Enhanced Security Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-must-be-32-chars-minimum
SESSION_SECURE=false
SESSION_SAME_SITE=lax
HTTPS_ONLY=false
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

# CORS Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=true
CSP_REPORT_URI=

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
PAYMENT_RATE_LIMIT=5
ADMIN_RATE_LIMIT=50

# Input Validation
MAX_REQUEST_SIZE=10mb
MAX_PARAMETER_COUNT=100
JSON_DEPTH_LIMIT=10

# Security Monitoring
SECURITY_LOGGING_ENABLED=true
AUDIT_LOGGING_LEVEL=MEDIUM
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# IP Restrictions
IP_WHITELIST_ENABLED=false
ADMIN_IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST_ENABLED=false
IP_BLACKLIST=

# Brute Force Protection
BRUTE_FORCE_ENABLED=true
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_WINDOW_MS=900000

# Geographic Security
GEO_ANOMALY_DETECTION_ENABLED=true
ALLOWED_COUNTRIES=
BLOCKED_COUNTRIES=

# Security Features
ENABLE_AUDIT_LOGGING=true
ENABLE_SESSION_SECURITY=true
ENABLE_IP_WHITELIST=false
REQUIRE_REAUTH_FOR_SENSITIVE=true