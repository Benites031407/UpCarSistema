{
  "name": "upcar-aspiradores",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:iot\"",
    "dev:frontend": "npm run dev --workspace=@upcar-aspiradores/frontend",
    "dev:backend": "npm run dev --workspace=@upcar-aspiradores/backend",
    "dev:iot": "npm run dev --workspace=@upcar-aspiradores/iot-controller",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspace=@upcar-aspiradores/backend",
    "test:integration": "npm run test:integration --workspace=@upcar-aspiradores/backend",
    "test:e2e": "npm run test:e2e --workspace=@upcar-aspiradores/backend",
    "test:property": "npm run test:property --workspace=@upcar-aspiradores/backend",
    "test:watch": "npm run test:watch --workspaces",
    "lint": "npm run lint --workspaces",
    "format:check": "npm run format:check --workspaces --if-present",
    "type-check": "npm run type-check --workspaces",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "rimraf": "^4.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
